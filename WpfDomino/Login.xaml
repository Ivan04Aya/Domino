<Window x:Class="WpfDomino.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDomino"
        mc:Ignorable="d"
        Title="Login" Height="313.918" Width="543.734">
    <Grid Margin="0,0,2,-2">
        <TextBox x:Name="tbUser" HorizontalAlignment="Left" Height="23" Margin="196,47,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="249"/>
        <Label x:Name="lbUser" Content="User :" HorizontalAlignment="Left" Margin="66,44,0,0" VerticalAlignment="Top" Width="71"/>
        <PasswordBox x:Name="pbPassword" HorizontalAlignment="Left" Margin="196,123,0,0" VerticalAlignment="Top" Height="23" Width="249"/>
        <Label x:Name="lbPassword" Content="Password :" HorizontalAlignment="Left" Margin="66,123,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.636,0.254"/>
        <Button x:Name="btLogin" Content="Login" HorizontalAlignment="Left" Margin="370,228,0,0" VerticalAlignment="Top" Width="75" IsDefault="True" Click="btLogin_Click"/>
        <Button x:Name="btCancel" Content="Cancel" HorizontalAlignment="Left" Margin="66,228,0,0" VerticalAlignment="Top" Width="75" IsCancel="True" Click="btCancel_Click"/>

    </Grid>
</Window>
